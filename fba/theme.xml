<theme>
    <formatVersion>3</formatVersion>
    <include>./../Royal_Primicia.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<color>d2d2d2</color>
		</image>

		<image name="logo">
			<path>./system.svg</path>
		</image>

	</view>

	<view name="basic, detailed, grid">

		<image name="logo">
			<path>./logo.svg</path>
			<color>000000</color>
		</image>

		<image name="header" extra="true">
			<color>d2d2d2</color>
		</image>

		<image name="footer" extra="true">
			<color>d2d2d2</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>d2d2d2</selectorColor>
		</textlist>

	</view>

	<view name="grid">

		<image name="righter, header, footer" extra="true">
			<color>d2d2d2</color>
		</image>

		<image name="logo">
			<path>./logo.svg</path>
		</image>
		
		<image name="gridtile_background_selected">
			<color>d2d2d2</color>
		</image>

</view>

</theme>
